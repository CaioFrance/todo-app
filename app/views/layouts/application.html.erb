<!DOCTYPE html>
<html>
  <head>
    <title>TodoApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
      <div class="container-fluid">
        <%= link_to 'Todo Application', root_path, class: "navbar-brand" %>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li>
              <%= link_to 'Home', root_path, class:'nav-link' %>
            </li>

            <% unless user_signed_in? %>
              <li>
                <%= link_to 'Sobre', about_index_path, class:'nav-link' %>
              </li>
            <% else %>
              <li>
                <%= link_to 'Listas', root_path, class:'nav-link' %>
              </li>
              <li>
                <%= link_to 'Sobre', root_path, class:'nav-link' %>
              </li>
            <% end %>
          </ul>
    
          <%= link_to 'Registrar', new_user_registration_path, class:'text-warning text-decoration-none btn btn-link' %>

          <%= link_to user_session_path, class: "" do %>
            <div class="btn btn-outline-success">
              <i class="far fa-user" style="width: 3vh;"></i>
            </div>
          <% end %>

        </div> 
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
